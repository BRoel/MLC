<div class="container-fluid">
  <header class="header">
    <h1><%= @list.name %></h1>
    <%= form_for([@list, @movie]) do |f| %>
      <%= f.text_field :description, :class => "new-todo", :placeholder => (@movie.errors.full_messages_for(:description).first || "Enter a new movie...") %>
      <%= f.submit :style => "display: none" %>
    <% end %>
  </header>
  <section class="main">
    <input class="toggle-all" type="checkbox">
    <label for="toggle-all">Mark all as complete</label>
    <ul class="todo-list">
      <%= render :collection => @list.movies, :partial => "movies/movie_li", :as => :movie %>
    </ul>
  </section>
  <footer class="footer">
  </footer>
</section>
</div>